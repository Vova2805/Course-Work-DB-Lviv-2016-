                    <UserControls:ClientsCatalog Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" />

                    <GridSplitter Grid.Column="1" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                    <UserControls:CustomerEditableView Grid.Column="2" Grid.Row="0"
                                                       DataContext="{Binding Path=SelectedClient}" />
                    <GridSplitter Grid.Column="3" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                    <Border Grid.Row="0" Grid.Column="4" Margin="5" Grid.RowSpan="2">
