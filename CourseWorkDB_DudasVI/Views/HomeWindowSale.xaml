                                                                        <rules:EmptyRule/>
                                                                        <rules:NumberRule/>
                                                                    </Binding.ValidationRules>
                                                                </Binding>
                                                            </TextBox.Text>
                                                        </TextBox>
                                                    </Grid>
                                                </Expander>
                                                <Expander Header="Додатково" IsExpanded="True">
