<Controls:MetroWindow xmlns:UserControls="clr-namespace:CourseWorkDB_DudasVI.Views.UserControls"
                      x:Class="CourseWorkDB_DudasVI.Views.HomeWindowSale"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:CourseWorkDB_DudasVI"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:listItem="clr-namespace:CourseWorkDB_DudasVI.Views.UserControls.ListItem"
                      xmlns:converters="clr-namespace:CourseWorkDB_DudasVI.Converters"
                      xmlns:system="clr-namespace:System;assembly=mscorlib"
                      xmlns:rules="clr-namespace:CourseWorkDB_DudasVI.Views.Rules"
                      mc:Ignorable="d"
                      Icon="../Resources/images/icon_main.png"
                      Title="Sweet retail system"
                      BorderThickness="0"
                      GlowBrush="Black"
                      ResizeMode="CanResize"

                      WindowTransitionsEnabled="False"
                      WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Controls:MetroWindow.Resources>
        <converters:BooleanOrConverter x:Key="BooleanOrConverter"/>
        <ControlTemplate x:Key="errorTemplateStyle">
            <Grid>
                <Border BorderBrush="#FFCB2E2E" BorderThickness="1" Background="#11FF0000" IsHitTestVisible="False" x:Name="errorBorder"/>
                <AdornedElementPlaceholder x:Name="placeholder" />
                <Popup AllowsTransparency="True" HorizontalAlignment="Right" HorizontalOffset="0" VerticalOffset="0" PopupAnimation="Fade" Placement="Right" 
                                   PlacementTarget="{Binding ElementName=errorBorder}" IsOpen="{Binding ElementName=placeholder, Path=AdornedElement.IsFocused, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <Polygon  VerticalAlignment="Center" Points="0,4 4,0 4,8" Fill="#FFCB2E2E" Stretch="Fill" Stroke="#FFCB2E2E"
                                      StrokeThickness="2" />
                        <Border Background="#FFCB2E2E" CornerRadius="4" Padding="4">
                            <TextBlock HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="2,0,0,0"
                                                   Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent, Mode=OneWay}" />
                        </Border>
                    </StackPanel>
                </Popup>
            </Grid>
        </ControlTemplate>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button ToolTip="Налаштування профілю Alt+S" Click="SettingsClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5 0 5 0"
                               VerticalAlignment="Center"
                               Text="{Binding userNameSurname}" />
                    <Rectangle Width="15" Height="15">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Setter Property="Fill">
                                    <Setter.Value>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_settings}" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <VisualBrush x:Name="Brush" Stretch="Fill"
                                                             Visual="{StaticResource appbar_settings_white}" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                </StackPanel>
            </Button>
            <Button ToolTip="Синхронізувати (оновити) БД Alt+R" Command="{Binding RefreshAll}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5 0 5 0"
                               VerticalAlignment="Center" />
                    <Rectangle Width="15" Height="15">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Setter Property="Fill">
                                    <Setter.Value>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_refresh}" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <VisualBrush x:Name="Brush" Stretch="Fill"
                                                             Visual="{StaticResource appbar_refresh_white}" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                </StackPanel>
            </Button>
            <Button Click="LogoutClick" ToolTip="Завершити роботу">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="15" Height="15">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Setter Property="Fill">
                                    <Setter.Value>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_logout}" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <VisualBrush x:Name="Brush" Stretch="Fill"
                                                             Visual="{StaticResource appbar_logout_white}" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                </StackPanel>
            </Button>
            <Button ToolTip="Довідка Alt+F1" Click="Help">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5 0 5 0"
                               VerticalAlignment="Center"
                               Text="Довідка" />
                    <Rectangle Width="15" Height="15">
                        <Rectangle.Style>
                            <Style TargetType="{x:Type Rectangle}">
                                <Setter Property="Fill">
                                    <Setter.Value>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_information_circle}" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Fill">
                                            <Setter.Value>
                                                <VisualBrush x:Name="Brush" Stretch="Fill"
                                                             Visual="{StaticResource appbar_information_circle_white}" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout Header="Налаштування профілю" Position="Right" Name="AdminFlyout" Theme="Accent">
                <UserControls:SettingView />
            </Controls:Flyout>
            <Controls:Flyout Header="Фільтрація" Position="Right" Name="ClientsFilter" Theme="Accent">
                <UserControls:ClientsSalerFilter />
            </Controls:Flyout>
            <Controls:Flyout Header="Фільтрація і редагування" Position="Right" Name="NewOrderFilter" Theme="Accent">
                <UserControls:NewOrderFilter />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>

    <TabControl SelectionChanged="TabControl_SelectionChanged" x:Name="SalerTabControl">
        <TabControl.Resources>
            <converters:AddressConverter x:Key="AddressConverter" />
        </TabControl.Resources>
        <!--#region Замовники і замовлення-->
        <TabItem Header="Замовники">
            <Border Background="GhostWhite" BorderBrush="DodgerBlue" BorderThickness="0,2,0,0">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <UserControls:ClientsCatalog x:Name="ClientsCatalog" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" />

                    <GridSplitter Grid.Column="1" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="2" Grid.Row="0" DataContext="{Binding Path=SelectedClient}">
                        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Controls:NumericUpDown}">
                                    <Style.Triggers>
                                        <Trigger Property="IsReadOnly"
                                 Value="True">
                                            <Setter Property="HideUpDownButtons"
                                    Value="True" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>
                            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Grid.Column="0" Grid.Row="0">

                                </Grid>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="0"
                            Grid.RowSpan="2">
                                    <!--#region First expander-->
                                    <Expander Header="Особисті дані" IsExpanded="True">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0*" />
                                                <RowDefinition Height="31*" />
                                                <RowDefinition Height="31*" />
                                                <RowDefinition Height="36*" />
                                                <RowDefinition Height="36*" />
                                                <RowDefinition Height="31*" />
                                                <RowDefinition Height="31*" />
                                                <RowDefinition Height="33" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" Text="Ім'я" />
                                            <TextBox Grid.Row="1" Grid.Column="2" Margin="5,5,5,0" ToolTip="Введіть ім'я" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Name" >
                                                <TextBox.Text>
                                                    <Binding Path="Client.CLIENT_NAME" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5,0,5" Text="По-батькові" />
                                            <TextBox Grid.Row="2" Grid.Column="2" Margin="5,5,5,0" ToolTip="Введіть по-батькові"
                                     Text="{Binding Path=Client.CLIENT_MIDDLE_NAME,Mode=TwoWay}" />

                                            <!--Username of the user-->
                                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="5" Text="Назва компанії" />
                                            <TextBox  Grid.Row="5" Grid.Column="2" Margin="5,5,5,0"  ToolTip="Введіть назву компанії (якщо наявна)"
                                            Text="{Binding Path=Client.COMPANY_TITLE,Mode=TwoWay}" />

                                            <!--Username of the user-->
                                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="5" Text="Мобільний телефон" />
                                            <TextBox   Grid.Row="6" Grid.Column="2" Margin="5" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Mobile">
                                                <TextBox.Text>
                                                    <Binding Path="Client.MOBILE_PHONE" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>
                                            <TextBlock Grid.Row="7" Grid.Column="0" Margin="5" Text="Телефон компанії"
                                       VerticalAlignment="Center" />
                                            <TextBox Text="{Binding Path=Client.COMPANY_PHONE,Mode=TwoWay}" Grid.Row="7" Margin="5"
                                     Grid.Column="2" ToolTip="Введіть телефон компанії" VerticalAlignment="Center" />

                                            <TextBlock Grid.Row="4" Grid.Column="0" Margin="5" Text="E-mail" VerticalAlignment="Center" />
                                            <TextBox Grid.Row="4" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Email"
                                     Grid.Column="2" Margin="5" ToolTip="Введіть email у форматі ____@___.__. Наприклад newclient@gmail.com"
                                     VerticalAlignment="Center" >
                                                <TextBox.Text>
                                                    <Binding Path="Client.EMAIL" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmailRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Margin="5" Text="Прізвище" TextWrapping="Wrap"
                                       VerticalAlignment="Center" />
                                            <TextBox  Grid.Row="3" ToolTip="Введіть прізвище" Grid.Column="2"
                                     VerticalAlignment="Center" Margin="5"  Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Surname">
                                                <TextBox.Text>
                                                    <Binding Path="Client.CLIENT_SURNAME" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>
                                        </Grid>
                                    </Expander>
                                    <!--#endregion-->
                                    <!--#region Second expander-->
                                    <Expander Header="Адреса" IsExpanded="True">
                                        <Grid  VerticalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" Text="Країна" />
                                            <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,5,0" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Country">
                                                <TextBox.Text>
                                                    <Binding Path="Client.ADDRESS1.COUNTRY" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5,0,5" Text="Регіон" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Region"/>
                                            <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5,5,0" >
                                                <TextBox.Text>
                                                    <Binding Path="Client.ADDRESS1.REGION" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <TextBlock Grid.Row="5" Grid.Column="0" Margin="5" Text="Місто" />
                                            <TextBox x:Name="City" Grid.Row="5" Grid.Column="1" Margin="5,5,5,0" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}">
                                                <TextBox.Text>
                                                    <Binding Path="Client.ADDRESS1.CITY" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <TextBlock Grid.Row="6" Grid.Column="0" Margin="5" Text="Вулиця" />
                                            <TextBox Grid.Row="6" Grid.Column="1" Margin="5,5,5,0" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}" Name="Street">
                                                <TextBox.Text>
                                                    <Binding Path="Client.ADDRESS1.STREET" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>

                                            <TextBlock Grid.Row="7" Grid.Column="0" Margin="5" Text="Номер будинку" VerticalAlignment="Center" />
                                            <TextBox  BorderThickness="1" Grid.Row="7"
                                                Grid.Column="1" Margin="5" Validation.ErrorTemplate="{StaticResource errorTemplateStyle}"  VerticalAlignment="Stretch" Name="BN">
                                                <TextBox.Text>
                                                    <Binding Path="Client.ADDRESS1.BUILDING_NUMBER" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" ValidatesOnExceptions="True">
                                                        <Binding.ValidationRules>
                                                            <rules:EmptyRule/>
                                                            <rules:NumberRule/>
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>
                                        </Grid>

                                    </Expander>
                                    <!--#endregion-->
                                    <!--#region Third expander-->
                                    <Expander Header="Замовлення" IsExpanded="True">
                                        <ListBox Grid.Row="1" VerticalAlignment="Stretch"
                                 SelectedItem="{Binding SelectedOrder,Mode=TwoWay}"
                                 Background="{DynamicResource AccentColorBrush}" ItemsSource="{Binding SaleOrders}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <UserControls:ClientOrderListItem />
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                    <!--#endregion-->
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    <GridSplitter Grid.Column="3" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                    <Border Grid.Row="0" Grid.Column="4" Grid.RowSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <DataGrid Grid.Row="0" FontSize="14" Margin="0,0,5,0"
                                      ItemsSource="{Binding Path=SelectedClient.SelectedOrder.SaleOrder.ORDER_PRODUCT}"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="Auto" Header="Назва" IsReadOnly="True"
                                                        Binding="{Binding Path=PRODUCT_INFO.PRODUCT_TITLE}" />
                                    <DataGridTextColumn Width="Auto" Header="Категорія" IsReadOnly="True"
                                                        Binding="{Binding Path=PRODUCT_INFO.CATEGORY.CATEGORY_TITLE}" />
                                    <DataGridTextColumn Width="Auto" Header="Кількість" IsReadOnly="True"
                                                        Binding="{Binding QUANTITY_IN_ORDER}" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />
                            <DataGrid Grid.Row="2" FontSize="14" Margin="0,0,5,0"
                                      ItemsSource="{Binding Path=SelectedClient.DeliveryList}"
                                      SelectedItem="{Binding Path=SelectedClient.SelectedDelivery}"
                                      AutoGenerateColumns="False">
                                <DataGrid.Resources>
                                    <converters:VisibilityConverter x:Key="VisibilityConverter"/>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="Auto" Header="Дата" IsReadOnly="True"
                                                        Binding="{Binding Path=Delivery.DELIVERY_DATE,StringFormat=\{0:dd.MM.yyyy р.\}}" />
                                    <DataGridTextColumn Width="100" Header="Адреса (від)" IsReadOnly="True"
                                                        Binding="{Binding Path=DeliveryAddress.ADDRESS,Converter={StaticResource AddressConverter}}" />
                                    <DataGridTextColumn Width="100" Header="Адреса (до)" IsReadOnly="True"
                                                        Binding="{Binding Path=DeliveryAddress.ADDRESS1,Converter={StaticResource AddressConverter}}" />
                                    <DataGridTextColumn Width="Auto" Header="Вартість км." IsReadOnly="True"
                                                        Binding="{Binding Path=Delivery.COST_PER_KM}" />
                                    <DataGridTextColumn Width="Auto" Header="Відстань (км.)" IsReadOnly="True"
                                                        Binding="{Binding Path=DeliveryAddress.DISTANCE}" />
                                    <DataGridTextColumn Width="Auto" Header="Загалом за доставку" IsReadOnly="True"
                                                        Binding="{Binding Path=Total}" />
                                    <DataGridTemplateColumn Width="Auto" Header="Видалити" Visibility="{Binding Path=CanAddDelivery,Converter={StaticResource VisibilityConverter}}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Width="30" Command ="{Binding Path=DeleteDelivery}"
                                                                Height="30"
                                                                VerticalAlignment="Top"
                                                                ToolTip="Видалити із плану"
                                                                Style="{DynamicResource MetroCircleButtonStyle}">
                                                    <Rectangle Width="15" Height="15">
                                                        <Rectangle.Style>
                                                            <Style TargetType="{x:Type Rectangle}">
                                                                <Setter Property="Fill">
                                                                    <Setter.Value>
                                                                        <VisualBrush Stretch="Fill"
                                                                                             Visual="{StaticResource appbar_delete}" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver"
                                                                                     Value="True">
                                                                        <Setter Property="Fill">
                                                                            <Setter.Value>
                                                                                <VisualBrush x:Name="Brush"
                                                                                                     Stretch="Fill"
                                                                                                     Visual="{StaticResource appbar_delete_white}" />
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Rectangle.Style>
                                                    </Rectangle>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" />
                            <Border Background="GhostWhite" BorderThickness="2" Grid.Row="4">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <StackPanel.Resources>
                                            <Style TargetType="{x:Type Controls:NumericUpDown}">
                                                <Style.Triggers>
                                                    <Trigger Property="IsReadOnly"
                                     Value="True">
                                                        <Setter Property="HideUpDownButtons"
                                        Value="True" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Resources>
                                        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="5" Text="Додати доставку" FontSize="20" />
                                            <Grid Grid.Column="0" Grid.Row="0" />
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1"
                                Grid.RowSpan="2" Margin="5">
                                                <!--#region First expander-->
                                                <Expander Header="Від" IsExpanded="False">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="13*" />
                                                            <ColumnDefinition Width="81*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Склад : " VerticalAlignment="Center" Margin="5,8"
                                           FontSize="15" />
                                                        <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="5"
                                                ItemsSource="{Binding WarehousesAddresssStrings}"
                                                SelectedValue="{Binding SelectedWarehouseAddressString}"
                                                IsEditable="True" Grid.ColumnSpan="2" />
                                                    </Grid>
                                                </Expander>
                                                <Expander Header="До" IsExpanded="False">
                                                    <Grid VerticalAlignment="Stretch" DataContext="{Binding Path=SelectedClient.NewDelivery.DeliveryAddress.ADDRESS1}">
                                                        <Grid.Resources>
                                                            <converters:BooleanOrConverter x:Key="BooleanOrConverter"/>
                                                            <ControlTemplate x:Key="errorTemplateStyle">
                                                                <Grid>
                                                                    <Border BorderBrush="#FFCB2E2E" BorderThickness="1" Background="#11FF0000" IsHitTestVisible="False" x:Name="errorBorder"/>
                                                                    <AdornedElementPlaceholder x:Name="placeholder" />
                                                                    <Popup AllowsTransparency="True" HorizontalAlignment="Right" HorizontalOffset="0" VerticalOffset="0" PopupAnimation="Fade" Placement="Right" 
                                       PlacementTarget="{Binding ElementName=errorBorder}" IsOpen="{Binding ElementName=placeholder, Path=AdornedElement.IsFocused, Mode=OneWay}">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Polygon  VerticalAlignment="Center" Points="0,4 4,0 4,8" Fill="#FFCB2E2E" Stretch="Fill" Stroke="#FFCB2E2E"
                                          StrokeThickness="2" />
                                                                            <Border Background="#FFCB2E2E" CornerRadius="4" Padding="4">
                                                                                <TextBlock HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" Margin="2,0,0,0"
                                                       Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent, Mode=OneWay}" />
