        <TabItem Header="Нове замовлення">
            <Border Background="GhostWhite" BorderBrush="DodgerBlue" BorderThickness="0,2,0,0">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Background="{DynamicResource AccentColorBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <UserControls:ProductsCatalog Grid.Column="0"/>
                        <GridSplitter Grid.Column="1" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                        <Border Grid.Column="2" Margin="5">
                            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0"> 
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Замовник " VerticalAlignment="Center" Margin="5"
                                           FontSize="15" />
                                        <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="5"
                                          ItemsSource="{Binding ClientsTitle}"
                                          SelectedValue="{Binding SelectedClientTitle}"
                                          IsEditable="True" />
                                    </Grid>
                                    <DataGrid Margin="5,5,0,0" Grid.Row="1" HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch" SelectedItem="{Binding Path=SelectedProduct}"
                                  FontSize="14" ItemsSource="{Binding Path=ProductsList}" AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Width="Auto" Header="Назва" IsReadOnly="True"
                                                                Binding="{Binding Path=Title}" />
                                            <DataGridTextColumn Width="Auto" Header="Категорія" IsReadOnly="True"
                                                                Binding="{Binding Path=CategoryTitle}" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Border Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch"
                                Background="{DynamicResource AccentColorBrush}">
                                        <UserControls:TotalView DockPanel.Dock="Left" HorizontalAlignment="Stretch" />
                                    </Border>
                                </Grid>
                                <GridSplitter Grid.Column="1" Width="5" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Stretch" />
                                <UserControls:ProductViewForSale Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" DataContext="{Binding SelectedProduct}"/>
                            </Grid>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Height="50" BorderThickness="0,2,0,0" BorderBrush="Black" Background="{DynamicResource AccentColorBrush}">
                            <DockPanel HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Stretch"
                                   LastChildFill="False">

                                <Button Width="50" Click="CustomerFilter"
                                        Height="50"
                                        VerticalAlignment="Top"
                                        ToolTip="Фільтр Alt+F" Background="{DynamicResource ProgressBrush}"
                                        Style="{DynamicResource MetroCircleButtonStyle}">
                                    <Rectangle Width="20" Height="20">
                                        <Rectangle.Style>
                                            <Style TargetType="{x:Type Rectangle}">
                                                <Setter Property="Fill">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="Fill"
                                                                     Visual="{StaticResource appbar_filter}" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Fill">
                                                            <Setter.Value>
                                                                <VisualBrush x:Name="Brush" Stretch="Fill"
                                                                             Visual="{StaticResource appbar_filter_white}" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </Button>
                                <Button Width="50"
                                            Height="50"
                                            VerticalAlignment="Top"
                                            ToolTip="Повернутися назад Alt+Z"
                                            Background="{DynamicResource ProgressBrush}"
                                            Style="{DynamicResource MetroCircleButtonStyle}">
                                    <Rectangle Width="20" Height="20">
                                        <Rectangle.Style>
                                            <Style TargetType="{x:Type Rectangle}">
                                                <Setter Property="Fill">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="Fill"
                                                                         Visual="{StaticResource appbar_navigate_previous}" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Fill">
                                                            <Setter.Value>
                                                                <VisualBrush x:Name="Brush" Stretch="Fill"
                                                                                 Visual="{StaticResource appbar_navigate_previous_white}" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </Button>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </TabItem>
        <TabItem Header="Оформлення доставки">
            <Border Background="GhostWhite" BorderBrush="DodgerBlue" BorderThickness="0,2,0,0">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Background="{DynamicResource AccentColorBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <UserControls:CustomTextBox Grid.Row="0" Margin="5" />
                        <ListBox Grid.Row="1" SelectedItem="{Binding SelectedUser,Mode=TwoWay}"
                                  ItemsSource="{Binding Users}"  Background="{DynamicResource AccentColorBrush}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <listItem:ProductExtendedListItem />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <GridSplitter Grid.Column="1" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                    <UserControls:CustomerEditableView Grid.Column="4" Grid.Row="0" />
                    <GridSplitter Grid.Column="3" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                    <Border Grid.Column="2" Margin="5">
                        <DataGrid Grid.Row="0" Grid.Column="0" SelectedItem="{Binding SelectedTransaction}"
                                  FontSize="14" ItemsSource="{Binding Transactions}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Age">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Controls:NumericUpDown Minimum="0" Width="auto"
                                                            Interval="1"
                                                            Value="1"
                                                            BorderThickness="1"
                                                            Margin="5,0,0,5" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Height="50" BorderThickness="0,2,0,0" BorderBrush="Black" Background="{DynamicResource AccentColorBrush}">
                        <DockPanel HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Stretch"
                                   LastChildFill="False">

                            <Button Width="50" Click="CustomerFilter"
                                        Height="50"
                                        VerticalAlignment="Top"
