        <TabItem Header="Нове замовлення">
            <Border Background="GhostWhite" BorderBrush="DodgerBlue" BorderThickness="0,2,0,0">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                      Background="{DynamicResource AccentColorBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Склад" VerticalAlignment="Center" Margin="5" FontSize="15" />
                        <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="5"
                                  ItemsSource="{Binding WarehousesStrings, Mode=TwoWay}"
                                  SelectedValue="{Binding Path=CurrentWarehouseString,Mode=TwoWay}"
                                  IsEditable="False" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <UserControls:ProductsCatalog Grid.Column="0" />
                        <GridSplitter Grid.Column="1" Width="5" Grid.Row="0" HorizontalAlignment="Stretch" />
                        <Grid Grid.Column="2" Grid.Row="0" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Замовник " VerticalAlignment="Center" Margin="5"
                                           FontSize="15" />
                                <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="5"
                                          ItemsSource="{Binding ClientsTitle}"
                                          SelectedValue="{Binding SelectedClientTitle}"
                                          IsEditable="True" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <DataGrid HorizontalAlignment="Stretch" ToolTip="Замовлення"
                                          VerticalAlignment="Stretch" SelectedItem="{Binding Path=SelectedProduct}"
                                          FontSize="14" ItemsSource="{Binding Path=SelectedClient.PackagesProducts}"
                                          AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="Auto" Header="Назва" IsReadOnly="True"
                                                            Binding="{Binding Path=OrderProduct.PRODUCT_INFO.PRODUCT_TITLE}" />
                                        <DataGridTextColumn Width="Auto" Header="Категорія" IsReadOnly="True"
                                                            Binding="{Binding Path=OrderProduct.PRODUCT_INFO.CATEGORY.CATEGORY_TITLE}" />
                                        <DataGridTemplateColumn Width="Auto" Header="Кількість">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate DataType="{x:Type system:Decimal}">
                                                    <Controls:NumericUpDown Minimum="1" Width="auto"
                                                                            Interval="1"
                                                                            Value="{Binding  QuantityInOrder, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                                                                            BorderThickness="1" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Width="Auto" Header="Загальна вартість" IsReadOnly="True"
                                                            Binding="{Binding Path=PackageTotal}" />
                                        <DataGridTemplateColumn Width="Auto" Header="Видалити">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Width="50" Command="{Binding RemoveProductFromOrder}"
                                                            Height="50"
                                                            VerticalAlignment="Top"
                                                            ToolTip="Видалити із замовлення"
                                                            Style="{DynamicResource MetroCircleButtonStyle}">
                                                        <Rectangle Width="20" Height="20">
                                                            <Rectangle.Style>
                                                                <Style TargetType="{x:Type Rectangle}">
                                                                    <Setter Property="Fill">
                                                                        <Setter.Value>
                                                                            <VisualBrush Stretch="Fill"
                                                                                         Visual="{StaticResource appbar_delete}" />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Fill">
                                                                                <Setter.Value>
                                                                                    <VisualBrush x:Name="Brush"
                                                                                                 Stretch="Fill"
                                                                                                 Visual="{StaticResource appbar_delete_white}" />
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Rectangle.Style>
                                                        </Rectangle>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />
                                <DataGrid ToolTip="Список доставок" Grid.Row="2" FontSize="14"
                                          ItemsSource="{Binding Path=SelectedClient.NewOrder.NewOrderDeliveries}"
                                          AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="Auto" Header="Дата" IsReadOnly="True"
                                                            Binding="{Binding Path=Delivery.DELIVERY_DATE,StringFormat=\{0:dd.MM.yyyy р.\}}" />
                                        <DataGridTextColumn Width="*" Header="Адреса (від)" IsReadOnly="True"
                                                            Binding="{Binding Path=DeliveryAddress.ADDRESS,Converter={StaticResource AddressConverter}}" />
                                        <DataGridTextColumn Width="*" Header="Адреса (до)" IsReadOnly="True"
                                                            Binding="{Binding Path=DeliveryAddress.ADDRESS1,Converter={StaticResource AddressConverter}}" />
                                        <DataGridTextColumn Width="Auto" Header="Вартість км." IsReadOnly="True"
                                                            Binding="{Binding Path=Delivery.COST_PER_KM}" />
                                        <DataGridTextColumn Width="Auto" Header="Відстань (км.)" IsReadOnly="True"
                                                            Binding="{Binding Path=DeliveryAddress.DISTANCE}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>

                            <Border Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch"
                                    Background="{DynamicResource AccentColorBrush}">
                                <Grid Margin="5">
                                    <Grid.Resources>
                                        <!--<Converters:EmptyStringConverter x:Key="emptyStringConv"/>-->
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Margin" Value="5" />
                                            <Setter Property="Foreground" Value="{DynamicResource BlackColorBrush}" />
                                        </Style>
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" FontWeight="Bold" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="Загальна інформація про замовлення :" FontSize="14" />
                                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Дата створення :" />
