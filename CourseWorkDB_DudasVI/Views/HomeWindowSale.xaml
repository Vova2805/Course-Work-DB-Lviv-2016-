                                                        <TextBlock  Grid.Column="1" Grid.Row="2" FontSize="15" Text="{Binding  Path=SelectedClient.NewDelivery.Total,Mode=TwoWay}"
                                           VerticalAlignment="Center" Margin="5" Foreground="Green" />
                                                    </Grid>
                                                </Expander>
                                                <!--#endregion-->
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>
