                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Відстань : " VerticalAlignment="Center"
                                           Margin="5"
                                           FontSize="15" />
                                                        <Controls:NumericUpDown Grid.Row="0" Grid.Column="1" Minimum="0" Width="auto"
                                                        Margin="5"
                                                        Interval="1" Value="{Binding  Path=SelectedClient.NewDelivery.Kms,Mode=TwoWay}"
                                                        BorderThickness="1" />
                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Вартість км. : "
