<UserControl x:Class="CourseWorkDB_DudasVI.Views.UserControls.Charts.Line.BasicLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseWorkDB_DudasVI.Views.UserControls.Charts.Line"
             mc:Ignorable="d" 
             xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock VerticalAlignment="Center">Points</TextBlock>
            <Button Margin="5" Click="RemovePointsOnClick">-</Button>
            <Button Margin="5" Click="AddPointsOnClick">+</Button>
            <TextBlock VerticalAlignment="Center">Series</TextBlock>
            <Button Margin="5" Click="RemoveSeriesOnClick">-</Button>
            <Button Margin="5" Click="AddSeriesOnClick">+</Button>
            <Button Margin="5" Click="TestOnClick">Reset</Button>
        </StackPanel>
        <lvc:LineChart Name="Chart" Grid.Row="2" LegendLocation="Right"
                       Series="{Binding Series}" Background="White">
            <lvc:LineChart.AxisY>
                <lvc:Axis Title="Sold Items dhkasjhl j lajs kljl jaslkj lkj" Position="RightTop" />
            </lvc:LineChart.AxisY>
            <lvc:LineChart.AxisX>
                <lvc:Axis Title="Month 9ihahskjhc kuhkj h aljh saljal j lka s" Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"
                          Labels="Jan, Feb , Mar, Apr, May, Jun, Jul, Agu, Sep, Oct, Nov, Dec"
                          Position="RightTop"/>
            </lvc:LineChart.AxisX>
        </lvc:LineChart>
    </Grid>
</UserControl>
